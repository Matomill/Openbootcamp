public class IfStatement {
    public static void main(String args[]) {
        int numero = -3;
        
        if (numero > 0) {
             System.out.println("Se trata de un número positivo");
        }
       
        
        if (numero < 0 ) {
            System.out.println("Estamos hablando de un número negativo");
        }
        
        
        else {
             System.out.println("Es un cero!");
        }
   }
}
